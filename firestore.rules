rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /artifacts/{appId}/public/data/users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /artifacts/{appId}/public/data/companies/{companyId} {
      allow read, create: if request.auth != null;
      allow update, delete: if resource.data.ownerId == request.auth.uid;
    }

    match /artifacts/{appId}/public/data/companies/{companyId}/members/{userId} {
      allow read, write: if request.auth != null;
    }

    match /artifacts/{appId}/public/data/companies/{companyId}/driverLocations/{driverId} {
      allow read, write: if request.auth != null;
    }

    match /artifacts/{appId}/public/data/companies/{companyId}/jobs/{jobId} {
      allow read, write: if request.auth != null;
    }

    match /artifacts/{appId}/public/data/companies/{companyId}/jobs/{jobId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    match /artifacts/{appId}/public/data/publicJobs/{jobId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /artifacts/{appId}/public/data/publicDrivers/{driverId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /artifacts/{appId}/public/data/companies/{companyId}/geofences/{geofenceId} {
      allow read, write: if request.auth != null;
    }

    match /artifacts/{appId}/public/data/companies/{companyId}/trails/{trailId} {
      allow read, write: if request.auth != null;
    }
  }
}